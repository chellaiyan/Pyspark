import pandas as pd

def handle_exceptions(func):
    def wrapper(*args, **kwargs):
        try:
            return func(*args, **kwargs)
        except Exception as e:
            print(f"An error occurred: {str(e)}")
    return wrapper

@handle_exceptions
def read_csv_file(file_path):
    df = pd.read_csv(file_path)
    return df

@handle_exceptions
def validate_data(df):
    # Perform data validation
    # ...

@handle_exceptions
def cleanse_data(df):
    # Perform data cleansing
    # ...

@handle_exceptions
def transform_data(df):
    # Perform data transformation
    # ...

@handle_exceptions
def write_to_table(df, table_name):
    # Write data to table
    # ...

@handle_exceptions
def write_to_csv(df, output_file_path):
    # Write data to CSV file
    # ...

# Example usage
csv_file_path = "input.csv"
table_name = "output_table"
output_csv_file_path = "output.csv"

# Read CSV file
data_frame = read_csv_file(csv_file_path)

# Validate data
validate_data(data_frame)

# Cleanse data
cleanse_data(data_frame)

# Transform data
transform_data(data_frame)

# Write to table
write_to_table(data_frame, table_name)

# Write to CSV file
write_to_csv(data_frame, output_csv_file_path)
